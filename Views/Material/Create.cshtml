@model TieuHaoSanXuat.Models.Material
@{
    ViewData["Title"] = "Create Material";
}

<h2>Thêm Material</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown chọn nhà kho -->
            <div class="form-group">
                <label asp-for="WarehouseId" class="control-label"></label>
                <select asp-for="WarehouseId" asp-items="ViewBag.WarehouseId" class="form-control">
                    <option value="">Chọn nhà kho</option>
                </select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>

            <!-- Dropdown chọn nhà cung cấp -->
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" asp-items="ViewBag.SupplierId" class="form-control">
                    <option value="">Chọn nhà cung cấp</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <!-- Tên vật liệu -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Đơn vị -->
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <!-- Số lượng trong kho -->
            <div class="form-group">
                <label asp-for="QuantityInStock" class="control-label"></label>
                <input asp-for="QuantityInStock" class="form-control" />
                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm Material" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
