@model TieuHaoSanXuat.Models.Material

<h2>Chỉnh sửa Vật tư</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Unit"></label>
        <input asp-for="Unit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="QuantityInStock"></label>
        <input asp-for="QuantityInStock" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="WarehouseId"></label>
        <input asp-for="WarehouseId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierId"></label>
        <input asp-for="SupplierId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
