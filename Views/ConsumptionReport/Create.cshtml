@model TieuHaoSanXuat.Models.ConsumptionReport

@{
    ViewData["Title"] = "Tạo báo cáo tiêu hao vật tư";
}

<h2>@ViewData["Title"]</h2>

<h4>Báo cáo tiêu hao vật tư</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="ReportDate" class="control-label"></label>
                <input asp-for="ReportDate" class="form-control" />
                <span asp-validation-for="ReportDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalMaterialsUsed" class="control-label"></label>
                <input asp-for="TotalMaterialsUsed" class="form-control" />
                <span asp-validation-for="TotalMaterialsUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo báo cáo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
