@model IEnumerable<TieuHaoSanXuat.Models.ConsumptionReport>

<h2>Danh sách báo cáo tiêu hao vật tư</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo báo cáo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ngày lập báo cáo</th>
            <th>Tổng vật tư tiêu hao</th>
            <th>Ghi chú</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReportDate.ToShortDateString()</td>
                <td>@item.TotalMaterialsUsed</td>
                <td>@item.Notes</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
